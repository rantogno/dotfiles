[user]
	name = Someone
	email = someone@example.com

[core]
   editor = nvr -cc split --remote-wait-silent +'set bufhidden=delete'
	excludesfile = /home/rantogno/.gitignore
	autocrlf = false
	filemode = false
	deltaBaseCacheLimit = 1G

[color]
	ui = true

[alias]
	mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2' -
	se = series

[include]
	path = ~/.gitauthor
[diff]
	submodule = log
